{
  "compilerOptions": {
      "sourceMap": true,
      "esModuleInterop": true,
      "target": "es6",
      "lib": ["es2017", "es6", "es5", "dom", "scripthost"],
      "module": "commonjs",
      "jsx": "react",
      "baseUrl": ".",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "paths": {
          "@component": ["src/component"],
          "@hook": ["src/hook"],
          "@interface": ["src/interface"],
          "@util": ["src/util"]
      }
  },
  "include": [
      "./**/*.{ts,tsx,js,jsx,json}",
      "./tsconfig.json"
  ],
  "exclude": [
      "node_modules",
  ]
}